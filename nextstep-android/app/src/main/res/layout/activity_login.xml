<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_1280_1920"
    android:gravity="fill"
    android:orientation="vertical"
    tools:context="com.arunabhdas.mobile.broccoli.LoginActivity">

    <ImageView
        android:id="@+id/super_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_app"

        />
    <!-- Login progress -->
    <!-- TODO make this center in view when others disappear -->
    <RelativeLayout
        android:id="@+id/login_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/super_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/login_spinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/login_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_spinner"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/source_han_sans_cn_light"
            android:text="@string/account_logging_in"
            android:textColor="@color/black_80percent"
            android:visibility="visible" />

    </RelativeLayout>


    <TextView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/super_toolbar"
        android:background="@color/text_color"
        android:fontFamily="@font/source_han_sans_cn_light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/action_sign_in"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <RelativeLayout
            android:id="@+id/login_information_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/background_login_form"
            android:elevation="10dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_text_horizontal"
                android:layout_marginEnd="@dimen/margin_text_horizontal"
                android:fontFamily="@font/source_han_sans_cn_light"
                android:gravity="center"
                android:text="@string/account_logging_in"
                android:textColor="@color/black_50percent"
                android:textSize="@dimen/default_text_size" />

            <View
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onboarding_button_divider_width"
                android:layout_below="@+id/account_type"
                android:layout_marginTop="@dimen/margin_text_vertical"
                android:background="@color/light_grey" />

            <LinearLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/username_indicator"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/username_image"
                    android:layout_width="@dimen/universal_dimen10"
                    android:layout_height="@dimen/universal_dimen10"
                    android:layout_marginStart="@dimen/universal_dimen10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_players" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:src="@drawable/login" />-->

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_vertical_height"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:hint="@string/prompt_email"
                    android:fontFamily="@font/source_han_sans_cn_light"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/black_20percent"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>

            <View
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onboarding_button_divider_width"
                android:layout_below="@id/username_layout"
                android:background="@color/light_grey" />

            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/password_indicator"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/password_image"
                    android:layout_width="@dimen/universal_dimen10"
                    android:layout_height="@dimen/universal_dimen10"
                    android:layout_marginStart="@dimen/universal_dimen10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_players" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_vertical_height"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:hint="@string/prompt_password"
                    android:fontFamily="@font/source_han_sans_cn_light"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/black_20percent"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>
            <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onboarding_button_divider_width"
                android:layout_below="@id/password_layout"
                android:background="@color/light_grey" />

            <android.support.v7.widget.CardView
                android:id="@+id/email_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_cta_height"
                android:layout_below="@id/password_layout"
                android:layout_marginStart="@dimen/margin_text_horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/margin_text_horizontal"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/login_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_login_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/login_button_icon_bg_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_ic_bg"
                        android:gravity="center"
                        android:padding="7dp">

                        <ImageView
                            android:id="@+id/login_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_players" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/source_han_sans_cn_light"
                        android:gravity="center"
                        android:text="@string/action_sign_in"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_sign_in_button"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_text_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/margin_text_horizontal"
                android:fontFamily="@font/source_han_sans_cn_light"
                android:gravity="center"
                android:text="@string/reset_password"
                android:textColor="@color/login_underline_color"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/register_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget_password"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_text_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/margin_text_horizontal"
                android:fontFamily="@font/source_han_sans_cn_light"
                android:gravity="center"
                android:text="@string/signup_for_flo"
                android:textColor="@color/login_underline_color"
                android:textSize="@dimen/default_text_size" />

        </RelativeLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/other_login_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/other_login_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/source_han_sans_cn_light"
                android:gravity="center"
                android:text="@string/or_login_with"
                android:textColor="@color/black_50percent"
                android:textSize="@dimen/small_text_size" />

            <View
                style="@style/divider.light"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_toStartOf="@+id/other_login_description" />

            <View
                style="@style/divider.light"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_toEndOf="@+id/other_login_description" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/other_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/default_list_dimen"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:id="@+id/other_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickLogo"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:id="@+id/other_login_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_login_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/other_login_icon_layout"
                        android:layout_width="@dimen/other_login_button_icon_bg_width"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/other_login_label"
                        android:layout_alignBottom="@+id/other_login_label"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/login_ic_bg"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/other_login_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_players" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/other_login_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/chevron_right"
                        android:layout_toEndOf="@+id/other_login_icon_layout"
                        android:gravity="center"
                        android:minHeight="@dimen/button_cta_height"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="@string/button_label_login_with_flo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size" />

                    <ImageView
                        android:id="@+id/chevron_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:src="@drawable/fa_chevron_right" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/multisim_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_dimen5"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/toggle_multisim_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_dimen5"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/systemui_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_dimen5"
            android:visibility="gone"
            tools:visibility="visible"

            />

        <Button
            android:id="@+id/broadcast_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/universal_dimen5"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>


</RelativeLayout>
