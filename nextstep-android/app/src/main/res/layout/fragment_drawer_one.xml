<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_1"
    android:orientation="vertical">

    <!-- top_panel start -->
    <RelativeLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_theme_cello_60percent"
        >

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <RelativeLayout
                android:id="@+id/login_information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:background="@drawable/background_login_form"
                android:elevation="10dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_text_horizontal"
                    android:layout_marginEnd="@dimen/margin_text_horizontal"
                    android:fontFamily="@font/source_han_sans_cn_light"
                    android:gravity="center"
                    android:text="@string/actions_fragment_1_title_0"
                    android:textColor="@color/black_50percent"
                    android:textSize="@dimen/default_text_size" />

                <View
                    android:id="@+id/separator_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboarding_button_divider_width"
                    android:layout_below="@+id/account_type"
                    android:layout_marginTop="@dimen/margin_text_vertical"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/first_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/username_indicator"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/username_image"
                        android:layout_width="@dimen/universal_dimen10"
                        android:layout_height="@dimen/universal_dimen10"
                        android:layout_marginStart="@dimen/universal_dimen10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_players" />

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@drawable/login" />-->

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/form_vertical_height"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:hint="@string/actions_fragment_1_title_1"
                        android:fontFamily="@font/source_han_sans_cn_light"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_20percent"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <View
                    android:id="@+id/separator_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboarding_button_divider_width"
                    android:layout_below="@id/first_layout"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/second_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/second_indicator"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/second_image"
                        android:layout_width="@dimen/universal_dimen10"
                        android:layout_height="@dimen/universal_dimen10"
                        android:layout_marginStart="@dimen/universal_dimen10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_players" />

                    <EditText
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/form_vertical_height"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:hint="@string/actions_fragment_1_title_2"
                        android:fontFamily="@font/source_han_sans_cn_light"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_20percent"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>
                <View
                    android:id="@+id/separator_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboarding_button_divider_width"
                    android:layout_below="@id/second_layout"
                    android:background="@color/light_grey" />
                <LinearLayout
                    android:id="@+id/third_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/third_indicator"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/third_image"
                        android:layout_width="@dimen/universal_dimen10"
                        android:layout_height="@dimen/universal_dimen10"
                        android:layout_marginStart="@dimen/universal_dimen10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_players" />

                    <EditText
                        android:id="@+id/third"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/form_vertical_height"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:hint="@string/actions_fragment_1_title_3"
                        android:fontFamily="@font/source_han_sans_cn_light"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_20percent"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>
                <View
                    android:id="@+id/separator_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboarding_button_divider_width"
                    android:layout_below="@id/third_layout"
                    android:background="@color/light_grey" />
                <LinearLayout
                    android:id="@+id/fourth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/fourth_indicator"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/fourth_image"
                        android:layout_width="@dimen/universal_dimen10"
                        android:layout_height="@dimen/universal_dimen10"
                        android:layout_marginStart="@dimen/universal_dimen10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_players" />

                    <EditText
                        android:id="@+id/fourth"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/form_vertical_height"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:hint="@string/actions_fragment_1_title_4"
                        android:fontFamily="@font/source_han_sans_cn_light"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_20percent"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>
                <View
                    android:id="@+id/separator_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboarding_button_divider_width"
                    android:layout_below="@id/fourth_layout"
                    android:background="@color/light_grey" />
                <android.support.v7.widget.CardView
                    android:id="@+id/fifth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_cta_height"
                    android:layout_below="@id/separator_5"
                    android:layout_marginStart="@dimen/margin_text_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/margin_text_horizontal"
                    app:cardCornerRadius="@dimen/button_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/login_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_login_button"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/login_button_icon_bg_width"
                            android:layout_height="match_parent"
                            android:background="@drawable/login_ic_bg"
                            android:gravity="center"
                            android:padding="7dp">

                            <ImageView
                                android:id="@+id/login_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_players" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/source_han_sans_cn_light"
                            android:gravity="center"
                            android:text="@string/actions_fragment_1_title_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/sixth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_cta_height"
                    android:layout_below="@id/fifth_layout"
                    android:layout_marginStart="@dimen/margin_text_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/margin_text_horizontal"
                    app:cardCornerRadius="@dimen/button_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/sixth_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_login_button"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/login_button_icon_bg_width"
                            android:layout_height="match_parent"
                            android:background="@drawable/login_ic_bg"
                            android:gravity="center"
                            android:padding="7dp">

                            <ImageView
                                android:id="@+id/sixth_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_players" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/source_han_sans_cn_light"
                            android:gravity="center"
                            android:text="@string/actions_fragment_1_title_6"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/seventh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_cta_height"
                    android:layout_below="@id/sixth_layout"
                    android:layout_marginStart="@dimen/margin_text_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/margin_text_horizontal"
                    app:cardCornerRadius="@dimen/button_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/seventh_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_login_button"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/login_button_icon_bg_width"
                            android:layout_height="match_parent"
                            android:background="@drawable/login_ic_bg"
                            android:gravity="center"
                            android:padding="7dp">

                            <ImageView
                                android:id="@+id/seventh_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_players" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:fontFamily="@font/source_han_sans_cn_light"
                            android:gravity="center"
                            android:text="@string/actions_fragment_1_title_7"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/other_login_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:visibility="gone">

                <TextView
                    android:id="@+id/other_login_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/source_han_sans_cn_light"
                    android:gravity="center"
                    android:text="@string/or_login_with"
                    android:textColor="@color/black_50percent"
                    android:textSize="@dimen/small_text_size" />

                <View
                    style="@style/divider.light"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_toStartOf="@+id/other_login_description" />

                <View
                    style="@style/divider.light"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_toEndOf="@+id/other_login_description" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/other_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/default_list_dimen"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/other_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickLogo"
                    app:cardCornerRadius="@dimen/button_corner_radius"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/other_login_view_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_login_button"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/other_login_icon_layout"
                            android:layout_width="@dimen/other_login_button_icon_bg_width"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/other_login_label"
                            android:layout_alignBottom="@+id/other_login_label"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/login_ic_bg"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/other_login_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_players" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/other_login_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toStartOf="@+id/chevron_right"
                            android:layout_toEndOf="@+id/other_login_icon_layout"
                            android:gravity="center"
                            android:minHeight="@dimen/button_cta_height"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="@string/button_label_login_with_flo"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_text_size" />

                        <ImageView
                            android:id="@+id/chevron_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/activity_vertical_margin"
                            android:src="@drawable/fa_chevron_right" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/multisim_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/universal_dimen5"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/toggle_multisim_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/universal_dimen5"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/systemui_restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/universal_dimen5"
                android:visibility="gone"
                tools:visibility="visible"

                />

            <Button
                android:id="@+id/broadcast_reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/universal_dimen5"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
    <!-- bottom_panel end -->
</RelativeLayout>

