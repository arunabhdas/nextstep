        android:id="@+id/onboarding_pager"
        android:background="@drawable/gradient_side_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/onboarding_button_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

<!--        <Button
            android:id="@+id/onboarding_explore_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/onboarding_button_divider"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
